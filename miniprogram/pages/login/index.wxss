/* pages/login/index.wxss */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  padding: 40rpx;
  background-color: #f8f8f8;
}

/* Logo 区域 */
.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
  margin-bottom: 60rpx;
}

.logo {
  width: 200rpx;
  height: auto;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: #666;
}

/* 审核状态提示 */
.audit-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  margin: 40rpx 0;
  width: 80%;
  border-radius: 16rpx;
}

.pending {
  background-color: #e6f7ff;
  border: 2rpx solid #91d5ff;
}

.rejected {
  background-color: #fff2f0;
  border: 2rpx solid #ffccc7;
}

.audit-text {
  margin-top: 20rpx;
  font-size: 30rpx;
  text-align: center;
  color: #333;
}

/* 表单样式 */
.form-container {
  width: 100%;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #333;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #3A7FED;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
}

.submit-btn:active {
  background-color: #2a70e0;
}

.switch-form {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.switch-btn {
  color: #3A7FED;
} 