.history-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #F5F5F5;
  overflow: hidden;
}

.order-tabs {
  display: flex;
  background-color: #FFFFFF;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #EEEEEE;
  flex-shrink: 0;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  padding: 20rpx 0;
  position: relative;
}

.tab.active {
  color: #3A7FED;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #3A7FED;
}

.order-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

.order-item {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  width: 100%;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #EEEEEE;
  flex-wrap: wrap;
}

.order-no {
  font-size: 26rpx;
  color: #666666;
}

.order-status {
  font-size: 26rpx;
  color: #3A7FED;
}

.order-content {
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  width: 100%;
}

.order-info {
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
  flex-wrap: wrap;
  width: 100%;
  box-sizing: border-box;
}

.info-label {
  width: 80rpx;
  font-size: 26rpx;
  color: #999999;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
  word-break: break-all;
  word-wrap: break-word;
  max-width: calc(100% - 80rpx);
  box-sizing: border-box;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #EEEEEE;
  border-top-color: #3A7FED;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-right: 10rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #999999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.address-item {
  align-items: flex-start;
}

.address-value {
  white-space: normal;
  line-height: 1.4;
} 